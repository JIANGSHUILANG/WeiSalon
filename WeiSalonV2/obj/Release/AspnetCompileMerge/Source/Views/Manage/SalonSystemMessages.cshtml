@{
    ViewBag.Title = "SalonSystemMessages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using Boboframework
@using BoboModel
@model Boboframework.PageOfItems<SysInformation>
<div class="am-cf admin-main">
    <!-- content start -->
    <div class="admin-content am-g">
        <div class="am-padding system-container">
            <div class="am-panel am-panel-default">
                <div class="am-panel-hd">
                    <h3 class="am-panel-title">系统公告</h3>
                </div>
                <ul class="am-list am-list-static">
                    @{
                        if (Model != null)
                        {
                            foreach (var info in Model)
                            {
                        <li><a href="/Manage/SystemInfo?sy_id=@info.sy_id" target="_blank"><span class="am-fr am-link-muted">@info.sy_date.ToShortDateString()</span>@info.sy_title</a></li>
                            }
                        }
                    }
                </ul>

            </div>
            <ul class="am-pagination am-pagination-centered">
                @using BoboCommon
                @MvcHtmlString.Create(MyPageBar.ShowMyPageBar((int)ViewBag.pageIndex, (int)ViewBag.pageCount))
            </ul>
        </div>
    </div>
    <!-- content end -->
</div>

