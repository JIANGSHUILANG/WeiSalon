@{
    Layout = null;
}
@model string

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta name="viewport" content="user-scalable=no">
    <meta charset="UTF-8">
    <script type="text/javascript">
        var phoneWidth = parseInt(window.screen.width);
        var phoneScale = phoneWidth / 640;
        var ua = navigator.userAgent;
        if (/Android (\d+\.\d+)/.test(ua)) {
            var version = parseFloat(RegExp.$1);
            if (version > 2.3) {
                document.write('<meta name="viewport" content="width=640, minimum-scale = ' + phoneScale + ', maximum-scale = ' + phoneScale + ', target-densitydpi=device-dpi,user-scalable=no">');
            } else {
                document.write('<meta name="viewport" content="width=640, target-densitydpi=device-dpi,user-scalable=no">');
            }
        }
        else {
            document.write('<meta name="viewport" content="width=640, user-scalable=no, target-densitydpi=device-dpi">');
        }
	</script>
    <title>BOBO美发salong</title>
    <style type="text/css">
        body, ul, ol, li, dl, dt, dd, p, h1, h2, h3, h4, h5, h6, form, fieldset, input {
            margin: 0;
            padding: 0;
        }

        img {
            border: none;
        }

        ul, ol, li {
            list-style: none;
        }

        a {
            color: #333;
            text-decoration: none;
            -webkit-tap-highlight-color: transparent;
            -webkit-touch-callout: none;
            -webkit-user-select: none;
        }

        body {
            color: #333;
            font-family: "Microsoft Yahei",Arial;
        }

        input {
            font-family: 'Microsoft Yahei',Arial;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
            -webkit-appearance: none;
            outline: none;
        }

        .clear {
            clear: both;
            height: 0;
            line-height: 0;
            font-size: 0;
            overflow: hidden;
        }

        .clearfix:after {
            visibility: hidden;
            display: block;
            font-size: 0;
            content: ".";
            clear: both;
            height: 0;
            zoom: 1;
        }

        * html > body .clearfix {
            display: inline-block;
        }

        * html .clearfix {
            height: 1%;
        }

        * + html .clearfix {
            min-height: 1%;
        }

        html, body {
            width: 100%;
            height: 100%;
        }

        body {
            background: #dcdddd;
            background: -webkit-radial-gradient(circle, #fefefe, #dcdddd);
        }

        .not-found {
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            width: 412px;
            height: 650px;
            margin: -325px 0 0 -206px;
        }

            .not-found img {
                vertical-align: top;
            }

            .not-found a {
                display: block;
                width: 210px;
                height: 70px;
                line-height: 70px;
                text-align: center;
                background: #9fa0a0;
                color: #000;
                margin: 160px auto 0;
                font-size: 30px;
            }
    </style>
</head>
<body>
    <div class="wrapper">
        <section class="not-found">
            <img src="/images/404.png">
            @{
                if (ViewBag.states != "1")
                {
                <a href="/Home/Index/@ViewBag.states" id="rea">返回首页(3)</a>   
                <script type="text/javascript">
                    var secs = 3; //倒计时的秒数 
                    var URL = "/Home/Index/@ViewBag.states";

                    window.onload = function () {
                        for (var i = secs; i >= 0; i--) {
                            window.setTimeout('doUpdate(' + i + ')', (secs - i) * 1000);
                        }
                    }
                    function doUpdate(num) {
                        document.getElementById('rea').innerHTML = '返回首页(' + num + ')';
                        if (num == 0) { window.location = URL; }
                    }
                </script>
                }
                else
                {
                }
            }
        </section>
    </div>
</body>
</html>
